---
import type IPost from '../types/post';

type Props = {
  post: IPost;
};

const { post } = Astro.props;
---

<li class='flex flex-row bg-white border'>
  <div class='flex flex-col gap-2 self-center p-2'>
    <h2 class='text-xl font-bold'>{post.title}</h2>
    <p class='text-sm text-slate-700 max-h-[20px] text-ellipsis overflow-clip'>
      {post.body}
    </p>
    <div class='flex flex-row items-center gap-2 text-sm'>
      <span class='text-slate-700'>Published by Alejandro La Rosa</span>
      <a class='text-blue-500 hover:text-blue-600' href='#'>Read More</a>
    </div>
  </div>
</li>
